<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppGallery.Pages.Navigation_page.Conteudo03"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Conteúdo 03">
    <ContentPage.Content>
        <StackLayout>
            <Button
                Clicked="InserirPagePilha"
                HorizontalOptions="Center"
                Text="Inserir página na pilha"
                VerticalOptions="Center" />
            <Button
                Clicked="RemoverPagePilha"
                HorizontalOptions="Center"
                Text="Remover página da pilha"
                VerticalOptions="Center" />


            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Content page 3"
                VerticalOptions="CenterAndExpand" />
            <Button
                Clicked="Voltar"
                HorizontalOptions="Center"
                Text="Pop Async / Voltar"
                VerticalOptions="Center" />

            <Button
                Clicked="VoltarParaInicio"
                HorizontalOptions="Center"
                Text="Voltar para o inicio"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>